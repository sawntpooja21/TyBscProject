<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TeacherLogin"
    android:background="@drawable/loginbg"
    >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="LOG IN "
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30dp"

        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/uname"
        android:layout_alignStart="@+id/uname"
        android:layout_marginTop="55dp"
        android:layout_alignRight="@+id/uname"
        android:layout_alignEnd="@+id/uname"

        android:id="@+id/textView" />

    <EditText

        android:id="@+id/uname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="User Name"
        android:textColorHint="@color/colorPrimary"
        android:drawableRight="@drawable/ic_person_black_24dp"
        android:layout_below="@+id/textView"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loginxml"/>

    <EditText
        android:id="@+id/pwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:maxLines="1"
        android:layout_below="@+id/uname"
        android:layout_alignLeft="@+id/uname"
        android:layout_alignStart="@+id/uname"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/colorPrimary"
        android:padding="16dp"
        android:drawableRight="@drawable/ic_https_black_24dp"
        android:background="@drawable/loginxml"/>

    <Button
        android:id="@+id/LOGINbutton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LOGIN"

        android:layout_below="@+id/pwd"
        android:layout_alignLeft="@+id/pwd"
        android:layout_alignStart="@+id/pwd"
        android:layout_alignRight="@+id/pwd"
        android:layout_alignEnd="@+id/pwd"
        android:background="@drawable/loginxml"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#ffffff"/>


</RelativeLayout>