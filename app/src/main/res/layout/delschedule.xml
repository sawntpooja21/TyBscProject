<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteSchedule">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/delId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:hint=" Enter Schedule Id"
            android:textColor="#000000" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:text="Show"
            android:id="@+id/delshow"/>
        <Button
            android:id="@+id/delButton"
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/delshow"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/etRoll"
            android:layout_alignStart="@+id/etRoll"
            android:layout_below="@+id/etRoll"
            android:layout_marginTop="180dp"
            android:background="#ffffff"
            android:elevation="5dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">



        <ListView
            android:id="@+id/delList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </ListView>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>